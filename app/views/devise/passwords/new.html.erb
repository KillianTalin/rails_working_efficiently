<div class="contents">
  <div class="container">
    <div class="row">
      <div class="col-xs-4 col-xs-offset-4 bg-white padded device-form-container full-sized ">  
  <h2>Boooooooh, you really forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true, placeholder: "nobrainer@gmail.com", label: false  %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Send me reset instructions", class:"btn-medium" %>
    </div>
  <% end %>
      </div>
    </div>
  </div>
</div>