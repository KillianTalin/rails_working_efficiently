<div class="container">
  <h1>My Tasks</h1>
  <% @tasks.each do |task| %>
    <div>Task: <b> <%= task.name %> </b> </div>
    <div>Dur√©e: <%= task.forecast_duration %> </div>
    <div> Projet: <%= task.project.name %> </div>
    <div>Priority: <%= task.category %></div>
    <div>Tag: #<%= task.tag.name %> </div>
    <%= link_to edit_task_path(task) do %>
      <i class="fa fa-pencil" aria-hidden="true"></i>
    <% end %>
    <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fa fa-times" aria-hidden="true"></i>
    <% end %>
  <% end %>
</div>
