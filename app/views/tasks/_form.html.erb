<%= simple_form_for([project, task], remote: true) do |f| %>
<div class="form_add">
  <div class="form_name">
    <%= f.submit %>
    <%= f.input :name, placeholder: "Create a database", label: false %>
  </div>
  <div class="form_estimation">
    <%= f.input :estimation, minute_step: 15, selected: Time.new(2000, 1, 1, 1, 0, 0), label: false %>
  </div>
  <%= f.hidden_field :project_id, value: project.id %>
</div>
<% end %>
